[Unit]
Description=WSO2 Enterprise Integrator - Analytics-dashboard
After=network.target

[Service]
ExecStart={{ setup_path }}/{{ product_name }}/{{ product_version }}/bin/analytics-dashboard.sh start
ExecStop={{ setup_path }}/{{ product_name }}/{{ product_version }}/bin/analytics-dashboard.sh stop
ExecRestart={{ setup_path }}/{{ product_name }}/{{ product_version }}/bin/analytics-dashboard.sh restart
PIDFile={{ setup_path }}/{{ product_name }}/{{ product_version }}/wso2/analytics/wso2/dashboard/runtime.pid
User={{ wso2_user }}
Group={{ wso2_group }}
Type=forking
Restart=on-failure
RestartSec=5
StartLimitInterval=60s
StartLimitBurst=3

[Install]
WantedBy=multi-user.target
